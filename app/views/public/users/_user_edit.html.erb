<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-6 mt-5 d-flex flex-column align-items-center edit_form">
      <h2>プロフィールを編集</h2>
      <%= form_with model: @user do |f| %>

        <label for="inputImage">Profile Image</label><br>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>

        <div class="row mt-4">
          <%= f.label :"Nick name" %><br />
          <%= f.text_field :name %>
        </div>
        <div class="row mt-3">
          <%= f.label :"User ID" %><br />
          <%= f.text_field :userid %>
        </div>
        <div class="row mt-3">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <%= f.submit "Save!" %>
      <% end %>
      <%= link_to "退会する", out_path(@user), method: :patch, "data-confirm" => "本当に退会しますか？" %>
    </div>
  </div>
</div>