<div class="container-fluid">
  <div class="row">
    <div class="cover-photo"><%= image_tag @user.get_cover_image(100, 200)%></div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= render 'public/users/user_info', user: @user %>
    </div>
    <div class="col-md-10">
      <%= render 'public/posts/form', post: @post %>
      <%= render 'public/posts/index', posts: @posts %>
    </div>
  </div>
</div>