<div class="container-fluid">
  <div class="row user_show_content">
    <div class="col-md-2">
      <%= render 'public/users/user_info', user: @user %>
    </div>
    <div class="col-md-10">
      <div class="row text-center error_message">
        <div class="col">
          <%= flash[:post_alert] %>
        </div>
      </div>
      <!-- 新規投稿ボタン -->
      <div class="row mb-5">
        <div class="col text-center">
          <button type="button" class="btn post-btn" data-bs-toggle="modal" data-bs-target="#exampleModal<%= @user.id %>">
            <i class="fas fa-plus"></i>
          </button>
        </div>
        <!-- 新規投稿モーダル -->
        <div class="modal fade" id="exampleModal<%= @user.id %>" tabindex="-1" aria-labelledby="exampleModalLabel<%= @user.id %>" aria-hidden="true">
          <div class="modal-dialog new_post_modal">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New Pots</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <%= render 'public/posts/form', post: @post_new %>
              </div>
            </div>
          </div>
        </div>
        <div class="container mt-5">
          <div id="user-posts-index-<%= @user.id %>" class="row">
            <%= render partial: 'public/posts/user_index', collection: @posts, as: "post_show", locals: {comment_new: @comment_new} %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>