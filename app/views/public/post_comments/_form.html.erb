<%= form_with model: [post, comment_new], local: false do |f| %>
  <%= f.text_field :comment, rows: '6', placeholder: "    Any comments?", id: "comment-textarea-#{post.id}", class: "comment_form" %>
  <%= button_tag type: 'submit', class: 'comment_send_btn' do %>
    <span class="comment_send_btn">Send</span>
  <% end %>
<% end %>