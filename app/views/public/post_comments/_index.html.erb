<%= image_tag comment.user.get_profile_image(100,100) %>
<%= comment.user.name %>
<%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
<% if comment.user == current_user %>
  <%= link_to "Delete this Comment", post_post_comment_path(comment.post, comment), method: :delete, remote: true, "data-confirm" => "本当に削除しますか？"%>
<% end %>