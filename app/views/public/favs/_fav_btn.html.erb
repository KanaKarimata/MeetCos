<% if post.favorited_by?(current_user) %>
  <p>
    <%= link_to post_favs_path(post), method: :delete do %>
      ♥<%= post.favs.count %> いいね
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to post_favs_path(post), method: :post do %>
      ♡<%= post.favs.count %> いいね
    <% end %>
  </p>
<% end %>