<div class="container">
  <div class="row">
    <div class="col text-center mb-5">
      <%= render 'public/searches/user_search_form' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1">
      <%= link_to :back do %>
        <span class= "btn back_to_user">←</span>
      <% end %>
    </div>
    <div class="col-md-6">
      <div class="container">
        <div class="row">
          <div class="col">
            <h5 class="row followings_title">Followings</h5>
            <div class="row">
              <%= render partial: 'public/users/index', collection: @followings, as: "user" %>
            </div>
          </div>
          <div class="col">
            <h5 class="row followers_title">Followers</h5>
              <!--<div class="row">-->
                <%= render partial: 'public/users/index', collection: @followers, as: "user" %>
            <!--</div>-->
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <h1 class="chat_rooms_title">Chats</h1>
      <%= render 'public/rooms/index', rooms: @rooms %>
    </div>
  </div>
</div>
