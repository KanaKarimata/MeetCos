<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-1">
      <%= link_to :back do %>
        <span class= "btn back_to_user">←</span>
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="row text-center mb-5 contact_title">
        <h2>お問合せ</h2>
      </div>
      <div class="row d-flex justify-content-center">
        <div class="col-md-6">
          <%= form_with model: @contact, url: contacts_path do |f| %>
            <%= f.label :"お問い合わせ内容" %><br>
            <%= f.text_field :title, class: "col-md-12 mb-5" %><br>
            <%= f.label :"詳細" %><br>
            <%= f.text_area :body, class: "col-md-12 mb-5" %><br>
            <%= f.submit '送信' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>