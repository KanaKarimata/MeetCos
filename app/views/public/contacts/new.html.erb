<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-1">
      <%= link_to :back do %>
        <span class= "btn back_to_user">←</span>
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="row text-center mb-4 contact_title">
        <h2>お問合せフォーム</h2>
      </div>
      <div class="row d-flex justify-content-center">
        <div class="col-md-6">
          <%= form_with model: @contact, url: contacts_path do |f| %>
            <%= f.label :"お問い合わせ内容" %><br>
            <%= f.text_field :title, class: "col-md-12 mb-3 contact_title_form" %><br>
            <%= f.label :"詳細" %><br>
            <%= f.text_area :body, class: "col-md-12 mb-3 contact_body_form" %><br>
          <div class="row">
            <div class="col">
              <%= f.submit '送信する' %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>