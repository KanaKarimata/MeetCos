<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
      <%= render 'public/users/user_info', user: @user %>
    </div>
    <div class="col-md-10">
      <div class="row text-center mb-5">
        <%= render 'public/searches/post_search_form' %>
        <%= render 'public/searches/hashtag_search_form' %>
      </div>
      <div class="container-fluid">
        <div class="row">
         <%= render partial: 'index', collection: @posts, as: "post", locals: {comment_new: @comment_new} %>
       </div>
      </div>
    </div>
  </div>
</div>