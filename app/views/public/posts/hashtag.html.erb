<div class="container">
  <dv class="row">
    <div class="col-md-10">
      <h2><%= @hashtag.hashname %></h2>
      <div class="hashtag-name">
        <% @hashtags.sort.reverse.each do |count| %>
          <% count[1].each do |hashtag| %>
              <p><%= link_to  "##{hashtag.hashname} (#{hashtag.posts.count}) ä»¶","/post/hashtag/#{hashtag.hashname}",data: {"turbolinks" => false} %>
              </p>
          <% end %>
        <% end %>
      </div>
      <ul>
        <% @post.each do |t| %>
          <li><%= t.body %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>