<div class="container-fluid">
  <div class="row">
    <div class="col">
      <%= form_with model: post do |f| %>
        <%= f.label :"Photos", class:"form_label" %><br>
        <%= f.file_field :post_images, multiple: true, class: 'form-control' %><br>
        <div class="post_images" style="display: none;">
          <p id="preview"></p>
        </div>
      </div>
      <div class="col">
        <%= f.label :"Caption", class:"form_label text-right" %><br>
        <%= f.text_area :caption, placeholder: "Write a caption...",class: 'form-control caption_form' %><br>
        <%= f.label :"Hashtags", class:"form_label" %><br>
        <%= f.text_area :hashbody, placeholder: "You can add hashtags...", class: 'form-control' %><br>
       </div>
        <div class="modal-footer">
          <%= button_tag type: 'submit', class: 'btn btn-default' do %>
            <i class="fa-solid fa-paper-plane new_post_btn"></i>
          <% end %>
        </div>
      </div>
      <% end %>
  </div>
</div>